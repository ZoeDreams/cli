{
    "name": "builder-js-package",
    "description": "A generic build setup for JavaScript packages.",
    "homepage": "https://github.com/trusktr/builder-js-packages",
    "repository": {
        "type": "git",
        "url": "git@github.com:trusktr/builder-js-packages.git"
    },
    "bugs": {
        "url": "https://github.com/trusktr/builder-js-packages/issues"
    },
    "scripts": {
        "show:name": "node ./node_modules/builder-js-package/scripts/name.js",
        "build:clean": "./node_modules/builder-js-package/scripts/clean.sh",
        "build:prod": "builder run show:name && rm -rf package-lock.json && builder run build:cjs && builder run build:global",
        "build:dev": "builder run show:name && builder run build:dev:cjs",
        "build:dev:umd": "builder run build:umd:watch & P1=$!; builder run build:global:watch & P2=$!; wait $P1 $P2",
        "build:dev:cjs": "builder run build:cjs:watch & P1=$!; builder run build:global:watch & P2=$!; wait $P1 $P2",
        "build:dev:amd": "builder run build:amd:watch & P1=$!; builder run build:global:watch & P2=$!; wait $P1 $P2",
        "gulp": "gulp --cwd . --gulpfile ./node_modules/builder-js-package/config/gulpfile.js",
        "webpack": "webpack --config ./node_modules/builder-js-package/config/webpack.config.js",
        "build:umd": "builder run gulp -- build-umd",
        "build:cjs": "builder run gulp -- build-cjs",
        "build:amd": "builder run gulp -- build-amd",
        "build:global": "builder run webpack",
        "build:umd:watch": "builder run gulp -- watch-umd",
        "build:cjs:watch": "builder run gulp -- watch-cjs",
        "build:amd:watch": "builder run gulp -- watch-amd",
        "build:global:watch": "builder run build:global -- --progress --watch",
        "npm:test": "./node_modules/builder-js-package/scripts/run-karma-tests.sh",
        "npm:preversion": "echo '--- PREVERSION' && npm test && git reset HEAD global.js && git checkout -- global.js || true && git add . && git stash && git clean -xfd -e node_modules",
        "npm:version": "echo '--- VERSION' && builder run add-version-to-source && builder run build:prod && git add -f global.js || true",
        "add-version-to-source": "echo '--- VERSION-TO-SOURCE' && ./node_modules/builder-js-package/scripts/version-to-source.js && git add src/index.js",
        "npm:postversion": "echo '--- POSTVERSION' && npm publish && git push --follow-tags && git stash pop || true && git reset HEAD"
    },
    "dependencies": {
        "@babel/cli": "^7.0.0-beta.46",
        "@babel/core": "^7.0.0-beta.46",
        "@babel/plugin-proposal-object-rest-spread": "^7.0.0-beta.46",
        "@babel/plugin-transform-classes": "^7.0.0-beta.46",
        "@babel/plugin-transform-modules-amd": "^7.0.0-beta.46",
        "@babel/plugin-transform-modules-commonjs": "^7.0.0-beta.46",
        "@babel/plugin-transform-modules-umd": "^7.0.0-beta.46",
        "@babel/plugin-transform-runtime": "^7.0.0-beta.46",
        "@babel/preset-env": "^7.0.0-beta.46",
        "@babel/register": "^7.0.0-beta.46",
        "@babel/runtime": "^7.0.0-beta.46",
        "@skatejs/ssr": "^0.19.2",
        "babel-loader": "^8.0.0-beta.2",
        "babel-plugin-add-module-exports": "^0.2.1",
        "babel-plugin-array-includes": "^2.0.3",
        "babel-plugin-transform-builtin-classes": "^0.6.0",
        "buble": "^0.19.0",
        "buble-loader": "^0.5.0",
        "electron": "^2.0.0",
        "fast-async": "^6.3.4",
        "figlet": "^1.2.0",
        "globby": "^8.0.1",
        "gulp": "^4.0.0",
        "gulp-babel": "^8.0.0-beta.0",
        "gulp-buble": "^0.9.0",
        "gulp-cached": "^1.1.1",
        "jasmine-core": "^3.1.0",
        "karma": "^2.0.2",
        "karma-electron": "^6.0.0",
        "karma-jasmine": "^1.1.1",
        "karma-sourcemap-loader": "^0.3.7",
        "karma-spec-reporter": "0.0.32",
        "karma-stacktrace": "^1.0.3",
        "mkdirp": "^0.5.1",
        "webpack": "^4.6.0",
        "webpack-cli": "^2.0.15",
        "webpack-merge": "^4.1.2",
        "xvfb-maybe": "^0.2.1"
    },
    "keywords": [
        "build",
        "builder",
        "archetype",
        "build-archetype",
        "babel",
        "buble",
        "webpack",
        "web-development",
        "webdev",
        "karma",
        "electron"
    ]
}
